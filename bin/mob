#!/usr/bin/env sh

# First we'll start by collecting all the code we need from the libs.
source ./lib/help.bash
source ./lib/setup.bash
source ./lib/mob.bash

if [[ ! -d "$MOBBING_HOME" ]] ; then
  setup
elif [[ $# -eq 3 && $1 = "-a" ]] ; then
  add_author $2 "$3"
  print_author_added "$3"
elif [[ $@ = "-v" ]] ; then
  print_version
elif [[ $1 = "-h" || $1 = "--help" ]] ; then
  print_help
elif [[ $# -eq 0 ]] ; then
  print_current_mob
else
  do_the_mob $@
fi

